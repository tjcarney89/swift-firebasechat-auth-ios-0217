def common
  pod 'Firebase'
  pod 'FirebaseAuth'

end


target 'Firechat' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  common


  # Pods for Firechat

  target 'FirechatTests' do
	 inherit! :search_paths
   common
    # Pods for testing
  end

end
